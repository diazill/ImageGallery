@model List<string>

<div class="container">
    <div class="row">
        @foreach (var imagePath in Model)
        {
            <div class="col-md-3">
                <div class="alert alert-success" role="alert">
                    <img src="~/uploads/@imagePath" alt="image" height="100px" width="205px" />
                    <a href="/Gallery/DownloadFile/?filePath=@imagePath"><i class="fa fa-download" aria-hidden="true"></i></a> |
                    <a href="/Gallery/DeleteFile/?filePath=@imagePath"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </div>
            </div>
        }
    </div>
</div>





<div class="container">
    @using (Html.BeginForm("Index", "Gallery", FormMethod.Post, new{ enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="form-group col-md-6">
                <input type="file" class="form-control" name="myfile">
            </div>

            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-outline-primary">Submit</button>
            </div>
        </div>   
    }
</div>